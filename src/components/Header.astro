---
import Icon from './Icon.astro';

const navLinks = [
    { name: 'Entries', url: '/journal', icon: 'journal' },
    { name: 'Categories', url: '/categories', icon: 'category' },
    { name: 'Articles', url: '/blog', icon: 'articles' },
    { name: 'Portfolio', url: '/portfolio', icon: 'portfolio' },
    { name: 'Donate', url: '/donate', icon: 'donate' },
];
---

<header class="bg-white shadow">


    <div class="container mx-auto px-6 py3">
        <div class="flex flex-col items-center justify-center space-y-4 md:flex-row md:space-y-0">
            <a href="/" class="group">
                <h1 class="text-4xl my-4 font-bold bg-black text-teal-400 px-12 py-8 rounded-md hover:text-lime-400 hover:underline">Andrew's Digital Garden</h1>
            </a>
        </div>

        <nav class="flex-grow pb-4">
            <ul class="flex space-x-4 justify-center">
                {navLinks.map((link, index) => (
                    <li class="flex items-center">
                        <a href={link.url} class="text-gray-600 hover:text-sky-700 hover:underline hover:underline-offset-1 text-xl font-semibold pr-1">{link.name}</a>
                        <Icon name={link.icon} />
                        {index < navLinks.length - 1 && <span class="mx-2 text-gray-300">|</span>}
                    </li>
                ))}
            </ul>
