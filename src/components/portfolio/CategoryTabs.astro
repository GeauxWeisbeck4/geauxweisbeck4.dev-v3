---
const { categories } = Astro.props;
---

<div class="flex flex-wrap gap-2 mb-4">
    {categories.map((category: string, index: number) => (
        <button
          data-tab={category}
          class={`px-4 py-2 rounded-full ${index === 0 ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-800'} hover:bg-blue-500 hover:text-white transition-colors`}
        >
            {category}
        </button>
    ))}
</div>
