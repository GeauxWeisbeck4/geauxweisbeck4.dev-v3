---
const { entry } = Astro.props;
---

<div class="bg-white border-2 border-black hover:bg-slate-50 hover:shadow-lg shadow-md rounded-lg py-6 px-10 mb-6" data-entry-date={entry.data.date.toISOString()}>
    <div class="flex justify-between items-start mb-2">
        <a href={`/journal/${entry.slug}`} class="text-2xl text-black font-bold hover:text-sky-500 hover:underline">
            {entry.data.title}
        </a>
        <span class="text-teal-500 text-lg font-bold">
            {entry.data.date.toLocaleDateString()}
        </span>
    </div>
    <p class="text-black mb-4">
        {entry.data.description}
    </p>
    <div class="flex flex-wrap gap-2">
        {entry.data.tags.map(tag => (
            <span class="font-bold bg-sky-400 text-slate-100 hover:bg-sky-300 hover:shadow-lg rounded-lg hover:text-slate-800 px-2 py-1 rouned text-sm">
                {tag}
            </span>
        ))}
    </div>
</div>
