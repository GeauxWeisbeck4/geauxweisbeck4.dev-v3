<section class="newsletter px-12 py-8 rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Subscribe to My Newsletter</h2>
    <p class="mb-4">Stay up to date with products, subscriptions, and how your contributions are making an impact with each edition!</p>
    <form class="flex flex-col sm:flex-row content-center gap-4 w-2/3">
        <input
            type="email"
            placeholder="Enter your email"
            class="flex-grow px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
        />
        <button
            type="submit"
            class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition duration-300"
        >
            Subscribe
        </button>
    </form>
</section>

<script>
    const form = document.querySelector('form');
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
        const email = emailInput?.value;
        console.log(`Subscribing email: ${email}`);
        alert('Thank you for subscribing!');
        form.reset();
    })
</script>
