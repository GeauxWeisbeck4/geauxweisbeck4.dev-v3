---
import BaseLayout from '../layouts/BaseLayout.astro';
/* import { Icon } from 'astro-icon'; */

const contactInfo = {
    email: "andrew.weisbeck@gmail.com",
    phone: "+1 (919)638-6663",
    address: "2107 Stonehenge Dr Apt. 4, Raleigh, NC 27615",
    github: "https://github.com/geauxweisbeck4",
    linkedin: "https://linkedin.com/in/geauxweisbeck4",
    twitter: "https://twitter.com/geauxweisbeck4"
};
---

<BaseLayout title="Contact Andrew">
    <main class="container mx-auto px-4 px-8">
        <h1 class="text-2xl font-bold mb-8 text-center">Contact Andrew</h1>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Contact Form -->
             <section class="bg-white p-8 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold mb-6">Send me a message</h2>
                <!-- TODO Task 2: Test Form -->
                <form id="contact-form" class="space-y-2">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                      </div>
                      <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                      </div>
                      <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
                        <input type="text" id="subject" name="subject" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                      </div>
                      <div>
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea id="message" name="message" rows="4" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"></textarea>
                      </div>
                      <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">Send Message</button>
                </form>
             </section>

             <!-- Contact Information -->
              <!--TODO Task 1: Implement Icons from Astro-Icon -->
      <section class="bg-gray-100 p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-6">Contact Information</h2>
        <div class="space-y-4">
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:email" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <a href={`mailto:${contactInfo.email}`} class="hover:text-blue-600">{contactInfo.email}</a>
          </div>
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:phone" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <a href={`tel:${contactInfo.phone}`} class="hover:text-blue-600">{contactInfo.phone}</a>
          </div>
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:map-marker" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <span>{contactInfo.address}</span>
          </div>
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:github" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <a href={contactInfo.github} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600">GitHub</a>
          </div>
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:linkedin" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <a href={contactInfo.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600">LinkedIn</a>
          </div>
          <div class="flex items-center">
            <!-- TODO Task 1: Add Icon -->
            <!-- <Icon name="mdi:twitter" class="w-6 h-6 mr-2 text-blue-600" /> -->
            <a href={contactInfo.twitter} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600">Twitter</a>
          </div>
        </div>
      </section>
        </div>
    </main>
</BaseLayout>

<script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    form.addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries())

        // For netlify forms
        console.log('Form submitted successfully:', data);
        alert('Thank you for contacting me!');
        form.reset();
    });
</script>
